<%= link_to @discussion.title %><br/>
<small>Submitted <%= time_ago_in_words(@discussion.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@discussion, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render partial: 'comments/comment', collection: @discussion.comments %>
</ul>

<%= link_to 'Back', discussions_path %>